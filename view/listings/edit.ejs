<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edit your Listing </h3>
    <form method="post" action="/listings/<%= listing.id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data"  >
      
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="title"  class="form-control" value="<%= listing.title %>" required>
        <div class="valid-feedback">
            Title looks good!
          </div>
    </div>
        
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
<textarea  name ="description"  class="form-control" rows="5 " cols="50" required ><%= listing.description %></textarea> 
<div class="invalid-feedback">
    Please give a valid description
  </div>
</div>

<div class="mb-3">
    <label for="image[url]" class="form-label">Upload New Image</label>
    <input type="file" name="image[url]" class="form-control" value= "<%= listing.image.filename%>">
    <div class="invalid-feedback">
        Please give a valid url 
      </div>
</div>
<div class="mb-3">
    <img src="<%= listing.image.url %>" alt="image" style="height: 200px; ">
</div>
    <div class="row">
    <div class="mb-3 col-md-4">
    <label for="price" class="form-label">Price</label>
        <input type="number" class="form-control" name="price" value="<%= listing.price %>" required>
    </div>
    
    <div class="mb-3 col-md-8">

        <label for="country" class="form-label">Country</label>
        <input type="text"  class="form-control" name="country" value="<%= listing.country %>" required>
        <div class="invalid-feedback">
            Please give a valid country name
          </div>
    </div>
</div>
       
        
        <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" name="location" value="<%= listing.location %>" required>
        <div class="invalid-feedback">
            Please give a valid location
          </div>
    </div>
        
        
        
        <button class="btn btn-dark add-btn">Edit</button>
        <br>
        <br>
    </form>
</div>
</div>
<script src="/js/script.js"></script> 
</body>
